{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "sugarcube",
  "rules": {
    "source_file": {
      "type": "REPEAT",
      "content": {
        "type": "SYMBOL",
        "name": "item"
      }
    },
    "item": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "naked_variable"
        },
        {
          "type": "SYMBOL",
          "name": "text"
        }
      ]
    },
    "comment": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "<!--"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "CHOICE",
            "members": [
              {
                "type": "PATTERN",
                "value": "[^-]"
              },
              {
                "type": "PATTERN",
                "value": "-[^-]"
              },
              {
                "type": "PATTERN",
                "value": "--[^>]"
              }
            ]
          }
        },
        {
          "type": "STRING",
          "value": "-->"
        }
      ]
    },
    "line_continuation": {
      "type": "TOKEN",
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "STRING",
            "value": "\\"
          },
          {
            "type": "CHOICE",
            "members": [
              {
                "type": "SEQ",
                "members": [
                  {
                    "type": "CHOICE",
                    "members": [
                      {
                        "type": "STRING",
                        "value": "\r"
                      },
                      {
                        "type": "BLANK"
                      }
                    ]
                  },
                  {
                    "type": "STRING",
                    "value": "\n"
                  }
                ]
              },
              {
                "type": "STRING",
                "value": "\u0000"
              }
            ]
          }
        ]
      }
    },
    "text": {
      "type": "TOKEN",
      "content": {
        "type": "PREC",
        "value": -1,
        "content": {
          "type": "PATTERN",
          "value": "[^$][a-zA-Z0-9 :.]*"
        }
      }
    },
    "identifier": {
      "type": "PATTERN",
      "value": "[a-z][a-zA-Z0-9]*"
    },
    "naked_variable": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "$"
        },
        {
          "type": "PATTERN",
          "value": "[a-z][a-zA-Z0-9]*"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "property"
          }
        }
      ]
    },
    "property": {
      "type": "PREC",
      "value": 3,
      "content": {
        "type": "TOKEN",
        "content": {
          "type": "SEQ",
          "members": [
            {
              "type": "STRING",
              "value": "."
            },
            {
              "type": "PATTERN",
              "value": "[a-z][a-zA-Z0-9]*"
            }
          ]
        }
      }
    }
  },
  "extras": [
    {
      "type": "SYMBOL",
      "name": "comment"
    },
    {
      "type": "PATTERN",
      "value": "[\\s\\f\\uFEFF\\u2060\\u200B]|\\r?\\n"
    },
    {
      "type": "SYMBOL",
      "name": "line_continuation"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": [],
  "reserved": {}
}